        "morgan": "^1.10.1"
    },
    "devDependencies": {
        "@types/express": "^5.0.6",
        "@types/morgan": "^1.9.10",
        "@types/node": "^25.0.3",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.7",
        "prettier": "^3.7.4",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.9.3",
        "ts-node": "^10.9.2"
